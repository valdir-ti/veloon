{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["jest"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*", "__tests__/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
